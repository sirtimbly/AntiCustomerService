@model IEnumerable<AntiCustomerServiceSystem.Models.Issue>

@{
	ViewBag.Title = "New Call Wizard";
}

<h2>New Call Wizard</h2>
@if (Model.Count() > 0)
{ 
<p>Choose the issue to add this call to.</p>
<ul>
@foreach (AntiCustomerServiceSystem.Models.Issue item in Model)
{
	<li>@Html.ActionLink(item.Name, "Create", "Call", new { issueId = item.Id }, null)</li>
}
</ul>
}
else
{ 
		<div class="error">No Issues yet. @Html.ActionLink("Create One", "Create", "Issue", new { wizard = true }, null)</div>
}