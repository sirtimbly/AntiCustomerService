@model IEnumerable<AntiCustomerServiceSystem.Models.Issue>

<ul class="nav nav-list">
	<li class="nav-header">Issues</li>
	@foreach (Issue item in Model)
	{

	 string className = "";
	 if (App["activeIssueId"] == item.Id) { className = "active"; }
		<li class="@className">
			<a href="@Url.Action("Details", "Issue", new { id = item.Id })">@item.Name</a>
		</li>  
	}
	
	<li class="divider"></li>
	<li class="">@Html.ActionLink("Archived", "Archived", "Issue")</li>
	<li class="divider"></li>
</ul>
<div class="issue-menu-actions"><a href="@Url.Action("Create", "Issue")" class="btn btn-inverse"><i class="icon-fire icon-white"></i> New Issue</a></div>